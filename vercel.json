{
  "version": 2,
  "builds": [
    { "src": "apps/proxy/api/**/*.js", "use": "@vercel/node" },
    { "src": "apps/assets/esm/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/apps/proxy/api/$1" },
    { "src": "/back-office/(.*)", "dest": "/apps/assets/esm/$1",
      "headers": { "Cache-Control": "no-cache" } }
  ]
}

{
  "rewrites": [
    { "source": "/back-office/(.*)", "destination": "/assets/back-office/$1" }
  ],
  "headers": [
    {
      "source": "/back-office/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "*" },
        { "key": "Cross-Origin-Resource-Policy", "value": "cross-origin" },
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=31536000, immutable" }
      ]
    }
  ]
}
